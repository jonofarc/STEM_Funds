<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonathanmaldonado.stem_funds.ui.AddInvestmentActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/RecyclerView"
            android:layout_height="wrap_content">

            <EditText
                android:hint="InvestmentName"
                android:id="@+id/investmentName_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Agency"
                android:id="@+id/agency_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Subagency"
                android:id="@+id/subagency_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="BriefDescription"
                android:id="@+id/briefDescription_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_check"
            android:onClick="postInvestment"
            android:backgroundTint="@color/colorPrimary"
            app:rippleColor="@color/cardview_light_background"
            app:layout_anchorGravity="bottom|right|end" />

    </android.support.design.widget.CoordinatorLayout>

</android.support.constraint.ConstraintLayout>
